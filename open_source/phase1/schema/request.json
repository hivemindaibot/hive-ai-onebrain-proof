{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hive.onebrain.dev/schema/proof/request-0.1.0.json",
  "title": "Proof IO Query Request",
  "description": "Schema for the Phase 1 proof `/io/query` request payload.",
  "x-version": "0.1.0",
  "type": "object",
  "additionalProperties": false,
  "required": ["query", "context"],
  "properties": {
    "query": {
      "type": "string",
      "minLength": 1
    },
    "context": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "text"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "text": {
            "type": "string",
            "minLength": 1
          },
          "sha256": {
            "type": "string",
            "pattern": "^[0-9a-f]{64}$"
          }
        }
      }
    },
    "mode": {
      "type": "string",
      "enum": ["assist", "semi"]
    },
    "budget": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "seconds": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "tokens": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
